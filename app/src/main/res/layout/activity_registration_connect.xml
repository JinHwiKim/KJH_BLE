<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/registration_connect_img"
        android:layout_width="315dp"
        android:layout_height="344dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:padding="30dp"
        android:src="@drawable/ble_connect"/>

    <RelativeLayout
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:id="@+id/registration_connect_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/regi_0" />
        <TextView
            android:id="@+id/registration_connect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:textSize="24dp"
            android:textColor="#2f6fd1"
            android:lineSpacingExtra="-7dp"
            android:text="0%"
            android:gravity="top"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/registration_connect_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="14.5dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        android:textSize="13dp"
        android:textColor="#919499"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="6dp"
        android:text="BLE Device를 등록 중입니다.\n
잠시만 기다려 주세요."
        />


</LinearLayout>