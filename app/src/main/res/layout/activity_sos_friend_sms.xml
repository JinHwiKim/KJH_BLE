<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#f7f7f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/sos_friend_sms_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.5dp">
            <ImageView
                android:layout_width="8.5dp"
                android:layout_height="15.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/arrow_left"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sos_friend_sms_title_text"
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="SMS 메시지 저장"
            android:textColor="#333333"
            android:textSize="16dp"
            app:autoSizeMaxTextSize="16dp"
            app:autoSizeMinTextSize="10dp"
            app:autoSizeTextType="uniform" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sos_friend_sms_message_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33.5dp"
            android:layout_marginTop="6dp"
            android:text="SMS 메시지"
            android:textColor="#333333"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/sos_friend_sms_edittext"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/memberjoin_edittext"
            android:paddingTop="19dp"
            android:paddingLeft="18.5dp"
            android:paddingRight="18.5dp"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:textSize="14dp"/>





        <Button
            android:id="@+id/sos_friend_sms_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/blue_btn"
            android:text="SMS 메시지 저장"
            android:textSize="17dp"
            android:textColor="@drawable/blue_btn_text"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"/>
    </RelativeLayout>



</LinearLayout>