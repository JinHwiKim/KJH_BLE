    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#fcfcfc">


        <RelativeLayout
            android:id="@+id/devicepager1_main_img"
            android:layout_width="205dp"
            android:layout_height="205dp"
            android:layout_alignTop="@+id/linearLayout"
            android:orientation="vertical"
            android:background="@drawable/main_circle_blue">

            <TextView
                android:id="@+id/status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47.5dp"
                android:text="연결 상태"
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="69dp"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.04"
                android:lineSpacingExtra="-4dp"
                android:text="@string/connect0"
                android:textColor="#8bba29"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="109dp"
                android:src="@drawable/main_circle_line" />

            <Button
                android:id="@+id/find_btn"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="127.5dp"
                android:layout_marginBottom="1.5dp"
                android:background="@drawable/main_button_find"
                android:text="연결 확인"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="15dp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="95.5dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/devicepager1_main_img"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/device_pager_devicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|end"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="16dp"
                android:text="BLE Device"/>
        </LinearLayout>

        <ImageView
            android:layout_width="36.5dp"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:layout_marginRight="20dp"
            android:background="#999999" />


        <TextView
            android:id="@+id/devicepager1_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/devicepager1_main_img"
            android:gravity="right"
            android:text="위급상황 발생시 BLE Device의 동작으로 등록된 연락처에게 위급상황 알림 SMS 메시지를 전송할 수 있습니다."
            android:textColor="#cc333333"
            android:textSize="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/devicepager1_text1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/devicepager1_main_img"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:orientation="vertical">


            </RelativeLayout>


