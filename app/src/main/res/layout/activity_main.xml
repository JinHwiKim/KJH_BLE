    <TextView
        android:id="@+id/main_null_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="22.5dp"
        android:gravity="center"
        android:text="@string/main_text1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/device_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/sos_call_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18.5dp"
                        android:text="SMS 연락처 관리"
                        android:textColor="#323c3f"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/sos_call_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop=".5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="18.5dp"
                        android:text="위급상황 발생시 SMS를 전송할 연락처를 등록할 수 있습니다."
                        android:textColor="#a6a6ad"
                        android:textSize="12dp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/sos_call_btn"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <Button
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22.5dp"
                        android:background="@drawable/arrow_right" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="22.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sos_device_sound_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18.5dp"
                        android:text="위급상황 발생시 Android 알림음"
                        android:textColor="#323c3f"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/sos_device_sound_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18.5dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="5.5dp"
                        android:text="위급상황 발생시 Android 알림음을 on/off 할 수 있습니다."
                        android:textColor="#a6a6ad"
                        android:textSize="12dp" />

                </LinearLayout>


                <Switch
                    android:id="@+id/sos_android_sound_switch"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:thumb="@drawable/setting_switch_thumb"
                    android:track="@drawable/setting_switch_track_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="22.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sos_device_sound_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18.5dp"
                        android:text="위급상황 발생시 BLE Device 알림음"
                        android:textColor="#323c3f"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/sos_device_sound_text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18.5dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="5.5dp"
                        android:text="위급상황 발생시 BLE Device의 알림음을 on/off\n할 수 있습니다."
                        android:textColor="#a6a6ad"
                        android:textSize="12dp" />

                </LinearLayout>


                <Switch
                    android:id="@+id/sos_device_sound_switch"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:thumb="@drawable/setting_switch_thumb"
                    android:track="@drawable/setting_switch_track_selector" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/main_registration_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        android:layout_marginTop="14.5dp"
        android:background="@drawable/black_border_btn"
        android:text="BLE Device 등록"
        android:textAllCaps="false"
        android:textColor="@drawable/black_border_btn_text"
        android:textSize="17dp" />

</LinearLayout>