<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="65dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/registration_success_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/regi_succses"

            />

        <ImageView
            android:id="@+id/registration_success_img1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/regi_succses1"

            />

        <ImageView
            android:id="@+id/registration_success_img2"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_centerInParent="true"
            android:src="@drawable/regi_succses2"

            />

        <ImageView
            android:id="@+id/registration_success_img3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/regi_succses3"

            />
    </RelativeLayout>

    <TextView
        android:id="@+id/registration_success_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        android:text="기기 등록 성공"
        android:textSize="25dp"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/registration_success_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:text="기기 등록에 성공하였습니다."
        android:textSize="13dp"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/registration_success_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        android:text="확인"
        android:background="@drawable/blue_border_btn"
        android:textSize="17dp"
        android:letterSpacing="0.02"
        android:textColor="@drawable/blue_border_btn_text"
        android:lineSpacingExtra="4dp"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>