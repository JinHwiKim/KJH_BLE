<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/sos_friend_registration_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.5dp">
            <ImageView
                android:layout_width="8.5dp"
                android:layout_height="15.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/arrow_left"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sos_friend_registration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SMS 연락처 등록"
            android:textColor="#333333"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/sos_friend_registration_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/memberjoin_edittext"
                    android:hint="이름"
                    android:inputType="text"
                    android:paddingLeft="19.5dp"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/sos_friend_registration_editx1_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.5dp"
                    android:background="@drawable/edittext_x_btn" />
            </RelativeLayout>

            <Button
                android:id="@+id/sos_friend_registration_search_btn"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/sos_address"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="65dp">


            <EditText
                android:id="@+id/sos_friend_registration_phone_edittext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/memberjoin_edittext"
                android:digits="0123456789-+"
                android:hint="연락처"
                android:inputType="phone"
                android:paddingLeft="19.5dp"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="14dp" />

            <Button
                android:id="@+id/sos_friend_registration_editx2_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14.5dp"
                android:background="@drawable/edittext_x_btn" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="37.5dp"

            >

            <TextView
                android:id="@+id/sos_friend_registration_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="75dp"
                android:text="BLE Device 동작시 위급상황을 알릴 대상을 등록하세요."
                android:textColor="#2f6fd1"
                android:textSize="12dp" />

        </RelativeLayout>





    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/sos_friend_registration_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/blue_btn"
        android:text="연락처 등록"
        android:textColor="@drawable/blue_btn_text"
        android:textSize="17dp"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        />

</LinearLayout>