<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/registration_fail_total_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="177">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="65"/>

        <RelativeLayout
            android:id="@+id/registration_fail_img_layout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/registration_fail_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/regi_fail"
                />

            <ImageView
                android:id="@+id/registration_fail_img1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/regi_fail1"
                />

            <ImageView
                android:id="@+id/registration_fail_img2"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_centerInParent="true"
                android:src="@drawable/regi_fail2"
                />

            <ImageView
                android:id="@+id/registration_fail_img3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/regi_fail3"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/registration_fail_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18.5dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:text="기기 등록에 실패하였습니다."
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#333333"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="0dp"/>

        <TextView
            android:id="@+id/registration_fail_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:text=""
            android:textSize="13dp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="112"/>

        <Button
            android:id="@+id/registration_fail_re_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="재시도"
            android:textSize="17dp"
            android:textColor="@drawable/blue_btn_text"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="4dp"
            android:background="@drawable/blue_btn"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/registration_fail_cancel_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginRight="22.5dp"
            android:background="@drawable/blue_border_btn"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="4dp"
            android:text="취소"
            android:textColor="@drawable/blue_border_btn_text"
            android:textSize="17dp"
            android:textAllCaps="false"/>

    </LinearLayout>



</LinearLayout>
